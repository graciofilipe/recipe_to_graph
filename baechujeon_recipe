// Baechujeon Recipe
digraph {
	graph [rankdir=TB splines=ortho]
	fontname=Arial
	subgraph cluster_ingredients {
		style=invis
		Cabbage [label="6-8 Napa Cabbage Leaves" fillcolor=lightgreen shape=rectangle style=filled]
		Flour [label="1 cup Flour" fillcolor=lightyellow shape=rectangle style=filled]
		Water [label="1 cup Water" fillcolor=lightblue shape=rectangle style=filled]
		Egg [label="1 Egg" fillcolor=lightyellow shape=rectangle style=filled]
		"Potato Starch" [label="2 Tbsp Potato Starch" fillcolor=lightyellow shape=rectangle style=filled]
		Salt [label="1 tsp Salt" fillcolor=lightyellow shape=rectangle style=filled]
		Oil [label="Vegetable Oil" fillcolor=orange shape=rectangle style=filled]
		"Soy Sauce" [label="Soy Sauce" fillcolor=brown fontcolor=white shape=rectangle style=filled]
		Vinegar [label="White Vinegar" fillcolor=white shape=rectangle style=filled]
		"Sesame Seeds" [label="Sesame Seeds" fillcolor=lightyellow shape=rectangle style=filled]
		Gochugaru [label=Gochugaru fillcolor=red shape=rectangle style=filled]
	}
	subgraph cluster_cabbage_prep {
		fillcolor=lightgreen label="Cabbage Preparation" style=filled
		"Separate Leaves" [label="Separate Leaves" fillcolor=palegreen shape=rectangle style=filled]
		"Pound Stems" [label="Pound Stems" fillcolor=palegreen shape=rectangle style=filled]
		Cabbage -> "Separate Leaves"
		"Separate Leaves" -> "Pound Stems"
	}
	subgraph cluster_batter {
		fillcolor=lightyellow label="Batter Preparation" style=filled
		"Mix Dry" [label="Mix Flour, Potato Starch, and Salt" fillcolor=palegoldenrod shape=rectangle style=filled]
		"Add Wet" [label="Add Water and Egg" fillcolor=palegoldenrod shape=rectangle style=filled]
		"Mix Batter" [label="Mix until smooth" fillcolor=palegoldenrod shape=rectangle style=filled]
		Flour -> "Mix Dry"
		"Potato Starch" -> "Mix Dry"
		Salt -> "Mix Dry"
		"Mix Dry" -> "Add Wet"
		Water -> "Add Wet"
		Egg -> "Add Wet"
		"Add Wet" -> "Mix Batter"
	}
	subgraph cluster_frying {
		fillcolor=orange label=Frying style=filled
		"Heat Pan" [label="Heat Pan with Oil" fillcolor=peachpuff shape=oval style=filled]
		"Dip Cabbage" [label="Dip Cabbage in Batter" fillcolor=peachpuff shape=diamond style=filled]
		"Fry Cabbage" [label="Fry until golden brown" fillcolor=peachpuff shape=oval style=filled]
		Oil -> "Heat Pan"
		"Heat Pan" -> "Fry Cabbage" [label="Add Battered Cabbage"]
		"Pound Stems" -> "Dip Cabbage"
		"Mix Batter" -> "Dip Cabbage"
		"Dip Cabbage" -> "Fry Cabbage"
	}
	subgraph cluster_sauce {
		fillcolor=brown fontcolor=white label="Dipping Sauce" style=filled
		"Mix Sauce" [label="Mix Soy Sauce, Vinegar, Sesame Seeds, and Gochugaru" fillcolor=brown fontcolor=white shape=rectangle style=filled]
		"Soy Sauce" -> "Mix Sauce"
		Vinegar -> "Mix Sauce"
		"Sesame Seeds" -> "Mix Sauce"
		Gochugaru -> "Mix Sauce"
	}
	Serve [label="Serve Warm with Dipping Sauce" fillcolor=yellow shape=parallelogram style=filled]
	"Fry Cabbage" -> Serve
	"Mix Sauce" -> Serve
}
